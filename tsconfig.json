{
    "compilerOptions": {
        "allowJs": false,
        "baseUrl": "./",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "noLib": false,
        "lib": [
            "es6"
        ],
        "noUnusedLocals": false,
        "removeComments": true,
        "strict": false,
        "strictPropertyInitialization": false,
        "target": "es6",
        "outDir": "package"
    },
    "include": [
        "./src/*.ts",
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}